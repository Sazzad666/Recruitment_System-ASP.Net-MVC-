@model JobPortal.Data.ViewModel.LoginViewModel

@{
    Layout = "_LayoutAccount";
}

<!-- /Logo -->
<h4 class="mb-2">Welcome to Sneat! 👋</h4>
<p class="mb-4">Please sign-in to your account and start the adventure</p>

<form asp-action="Login" asp-controller="Account" id="account" class="mb-3" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="Email"
               type="text"
               class="form-control"
               autocomplete="username"
               aria-required="true"
               placeholder="Enter your email"
               autofocus />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3 form-password-toggle">
        @*<div class="d-flex justify-content-between">
            <label asp-for="Password" class="form-label"></label>
            <a href="#">
                <small>Forgot Password?</small>
            </a>
        </div>*@
            <label asp-for="Password" class="form-label"></label><span class="text-danger">*</span>
            <div class="input-group input-group-merge">
                <input asp-for="Password"
                       type="password"
                       class="form-control"
                       autocomplete="new-password"
                       placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                       aria-required="true" />
                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
            </div>
    </div>
    @*<div class="mb-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="remember-me" />
            <label class="form-check-label" for="remember-me"> Remember Me </label>
        </div>
    </div>*@
    <div class="mb-3">
        <button id="login-submit" class="btn btn-primary d-grid w-100" type="submit">Sign in</button>
    </div>
</form>

<p class="text-center">
    <span>New on our platform?</span>
    <a href="/register">
        <span>Create an account</span>
    </a>
</p>

<a href="/employer/login"
   class="btn btn-primary d-grid w-100" style="position:center">Sign in for Employer</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (ViewBag.PasswordChanged != null && (bool)ViewBag.PasswordChanged)
    {
        <script>
            Swal.fire({
                title: 'Password Changed',
                text: 'Your password has been changed successfully. Please sign in again.',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        </script>        
    }
}