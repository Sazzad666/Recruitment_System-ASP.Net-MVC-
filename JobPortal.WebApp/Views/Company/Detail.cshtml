                    <img class="img-fluid" src="https://localhost:7211/images/employers/@Model.UrlAvatar" alt="flag">
                    <hr />
                    <h3 style="text-align: center; margin-top: 10px; margin-bottom: 5px">@Model.FullName</h3>
                    <ul class="cat-list">
                        @if (ViewBag.CountJob == 1)
                        {
                            <li class="col-xs-12 col-4"><a href="/job?slug=@Model.Slug">@ViewBag.CountJob job opening</a></li>

                        }
                        else if (ViewBag.CountJob > 1)
                        {
                            <li class="col-xs-12 col-4"><a href="/job?slug=@Model.Slug">@ViewBag.CountJob jobs opening</a></li>
                        }
                    </ul>
                    <ul class="tags">
                        <li><a target="_blank" href="https://@Model.WebsiteURL/">@Model.WebsiteURL</a></li> - Established: @Model.CreateDate -
