@model IEnumerable<JobPortal.Data.Entities.Category>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <h1 style="text-align:center">Table of Category</h1>
            <div class="card">
                <div class="card-body">
                    <form asp-action="DeleteSelected" method="post">
                        <div class="d-flex justify-content-between mb-3">
                            <a asp-action="Create" class="btn btn-primary">Create New</a>
                            <input type="submit" class="btn btn-danger" value="Delete Selected" onclick="return confirm('Confirm deletion of the selected sections?')" />
                        </div>
                        @section Scripts {
                            <script>
                                $(function () {
                                    $('#checkall').change(function () {
                                        if ($(this).prop("checked") == true) {
                                            $("input[name=listDelete]").prop("checked", true);
                                        } else {
                                            $("input[name=listDelete]").prop("checked", false);
                                        }
                                    });
                                });
                            </script>
                        }
                        <div class="table-responsive text-nowrap">
                            <table class="table table-bordered" style="text-align: center">
                                <thead>
                                    <tr>
                                        <th>
                                            @*<i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayNameFor(model => model.Id)</strong>*@
                                            <input type="checkbox" id="checkall" />
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>
                                                @*<i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayFor(modelItem => item.Id)</strong>*@
                                                <input type="checkbox" name="listDelete" value="@category.Id" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => category.Name)
                                            </td>
                                           
                                            <td>
                                                <div class="dropdown">
                                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                        <i class="bx bx-list-ul"></i>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item update-button" href="/admin/category/update/@category.Id">
                                                            <i class="bx bx-edit me-1"></i> Update
                                                        </a>
                                                        <button class="dropdown-item delete-button" type="button" onclick="deleteItem(@category.Id)">
                                                            <i class="bx bx-trash me-1"></i> Delete
                                                        </button>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!--Page list-->
                        <div class="text-center">
                            <ul class="pagination">
                                @Html.PagedListPager((IPagedList)Model, page =>
                                Url.Action("Index", new { page }),
                                new PagedListRenderOptions
                                {
                                Display = PagedListDisplayMode.IfNeeded,
                                LiElementClasses = new string[] { "page-item" },
                                UlElementClasses = new string[] { "pagination" },
                                PageClasses = new string[] { "page-link" },
                                MaximumPageNumbersToDisplay = 7, // Maximum number of pages displayed
                                LinkToPreviousPageFormat = "<span aria-hidden=\"true\">&lsaquo;</span>",
                                LinkToNextPageFormat = "<span aria-hidden=\"true\">&rsaquo;</span>",
                                LinkToFirstPageFormat = "<span aria-hidden=\"true\">&lsaquo;&lsaquo;</span>",
                                LinkToLastPageFormat = "<span aria-hidden=\"true\">&rsaquo;&rsaquo;</span>"
                                })
                            </ul>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    input.btn.btn-danger {
        position: absolute;
        right: 25px;
        top: 25px;
    }

    th {
        font-weight: 700 !important;
    }

    .dropdown-item.update-button {
        background: transparent;
        border: none;
        font-weight: 700;
        color: forestgreen;
    }

        .dropdown-item.update-button:hover {
            background: transparent;
            color: forestgreen;
        }

    .dropdown-item.delete-button {
        background: transparent;
        border: none;
        font-weight: 700;
        color: #dc3545;
    }

        .dropdown-item.delete-button:hover {
            background: transparent;
            color: #dc3545;
        }

    .pagination {
        list-style-type: none;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a {
                display: inline-block;
                padding: 5px 10px;
                border: 1px solid #ccc;
                color: #333;
                text-decoration: none;
                border-radius: 5px;
            }

            .pagination li.active a {
                background-color: #333;
                color: #fff;
            }
</style>

<script>
    function deleteItem(id) {
        Swal.fire({
            title: 'Delete this category?',
            text: "Are you sure to delete the category?",
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Delete!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/admin/category/delete/' + id;
                Swal.fire(
                    'Deleted!',
                    '',
                    'success'
                );
            }
        });
    }
</script>